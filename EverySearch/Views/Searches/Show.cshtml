@using EverySearch.Models
@model Search

    <div id="showSearchView" class="hcenter">
        <h1>Binglex Search</h1>
        <form class="searchForm" asp-controller="Searches" asp-action="Create" method="post">
            <input type="text" name="query" placeholder="search query" value="@Model.Query" required/>
            <input type="submit" value=" " />
        </form>
        <div class="hcenter">
            @foreach (var item in Model.SearchResults)
            {
                <div class="searchResult">
                    <h2>
                        @Html.Raw(@item.Title)
                    </h2>
                    <a href="@item.Url">@item.DisplayUrl</a>
                    <div>
                        @Html.Raw(item.Snippet)
                    </div>
                </div>
            }
        </div>
    </div>